{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "docs/*", "dist/*"],
  "compilerOptions": {
    "inlineSourceMap": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": false,
    "types": ["svelte"],
    "module": "esNext",
    "target": "esnext",
    "moduleResolution": "node",
  }
}